<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory
		android:key="kdp_status_bar_category"
		android:title="@string/kdp_status_bar_category_title">
		
    <!-- Status bar -->
    <PreferenceScreen
        android:key="status_bar_settings"
        android:title="@string/status_bar_title"
        android:fragment="com.android.settings.cyanogenmod.StatusBarSettings" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_notification_drawer_category"
		android:title="@string/notification_drawer_title_category">
		
	<!-- KDP Notification Drawer Settings -->
	<PreferenceScreen
		android:key="kdp_notification_settings"
		android:title="@string/kdp_notification_settings"
		android:fragment="com.android.settings.kangdroid.KangDroidNotificationDrawerSettings" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_navigation_category"
		android:title="@string/kdp_navigation_category_title">
		
	<!-- KDP Notification Drawer Settings -->
	<PreferenceScreen
		android:key="kdp_navigation"
		android:title="@string/kdp_navigation_category_title"
		android:fragment="com.android.settings.kangdroid.KangDroidNavigationSettings" />

	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kangdroid_recents_activity_category"
		android:title="@string/kangdroid_recents_settings_title">
		
    <!-- KDP Recents Settings -->
    <PreferenceScreen
        android:key="recents_kangdroid"
        android:title="@string/kangdroid_recents_category_title"
        android:fragment="com.android.settings.kangdroid.KangDroidRecentsSettings" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_lockscreen_main_category"
		android:title="@string/kdp_lockscreen_main_category">
		
    <!-- KDP Animation Settings -->
    <PreferenceScreen
        android:key="kdp_lockscreen_main"
        android:title="@string/kdp_lockscreen_main_category"
        android:fragment="com.android.settings.kangdroid.KangDroidLockScreenSettings" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="animation_category"
		android:title="@string/anim_settings_title">
		
    <!-- KDP Animation Settings -->
    <PreferenceScreen
        android:key="kdp_animation_settings"
        android:title="@string/kangdroid_animation_main"
        android:fragment="com.android.settings.kangdroid.KangDroidAnimationSettings" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="misc_settings"
		android:title="@string/kdp_misc_category">
		
	<!-- KDP Other Settings -->
	<PreferenceScreen
		android:key="kdp_misc_settings"
		android:title="@string/kangdroid_misc_settings"
		android:fragment="com.android.settings.kangdroid.KangDroidMiscSettings" />
		
	</PreferenceCategory>

</PreferenceScreen>
