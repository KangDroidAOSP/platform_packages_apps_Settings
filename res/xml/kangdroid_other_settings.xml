<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
		
     <!-- Blur -->
     <PreferenceScreen
                android:key="kdp_blur_settings"
                android:title="@string/kdp_blur_settings"
                android:fragment="com.android.settings.rr.BlurPersonalizations" />
		
	<PreferenceCategory
		android:key="gesture_anywhere_category_kdp"
		android:title="@string/gesture_anywhere_category_kdp_title">
		
    <!-- Gesture anywhere -->
    <PreferenceScreen
         android:key="gesture_anywhere"
         android:fragment="com.android.settings.kangdroid.gestureanywhere.GestureAnywhereSettings"
         android:title="@string/gesture_anywhere_title" />
		 
	 </PreferenceCategory>
	 
	 <PreferenceCategory
		 android:key="kdp_app_bar"
		 android:title="@string/kdp_app_bar_title">
		 
     <!-- App sidebar -->
     <PreferenceScreen
          android:key="app_sidebar"
          android:fragment="com.android.settings.kangdroid.AppSidebar"
          android:title="@string/app_sidebar_title"/>
		  
    <!-- App circle bar -->
    <PreferenceScreen
         android:key="app_circle_bar"
         android:fragment="com.android.settings.kangdroid.AppCircleBar"
         android:title="@string/app_circle_bar_title"/>
		 
	 </PreferenceCategory>

</PreferenceScreen>
