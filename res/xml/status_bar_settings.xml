<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/status_bar_title">
	
	<PreferenceCategory
		android:key="kdp_status_bar_clock_category"
		android:title="@string/kdp_status_bar_clock_category_title">

	<PreferenceScreen
		android:key="status_bar_kangdroid_clock_date"
		android:fragment="com.android.settings.kangdroid.KangDroidClockSettings"
		android:title="@string/status_bar_clock_date_kangdroid_title"
		android:summary="@string/status_bar_clock_date_kangdroid_summary" />
		
	</PreferenceCategory>
		
	<PreferenceCategory
		android:key="kdp_status_bar_main_category"
		android:title="@string/kdp_status_bar_main_category">
	
    <com.android.settings.cyanogenmod.CMSystemSettingSwitchPreference
       android:key="status_bar_brightness_control"
       android:title="@string/status_bar_toggle_brightness"
       android:summary="@string/status_bar_toggle_brightness_summary"
       android:defaultValue="false" />
	   
    <com.android.settings.cyanogenmod.CMSystemSettingSwitchPreference
       android:key="status_bar_notif_count"
       android:title="@string/status_bar_notif_count_title"
       android:summary="@string/status_bar_notif_count_summary"
       android:defaultValue="false" />
	  
    <com.android.settings.cyanogenmod.CMSystemSettingSwitchPreference
       android:key="status_bar_quick_qs_pulldown"
       android:title="@string/status_bar_quick_qs_pulldown_title"
       android:summary="@string/status_bar_quick_qs_pulldown_summary"
       android:defaultValue="true" />
	   
   </PreferenceCategory>
   
	<PreferenceCategory
		android:key="kdp_status_bar_battery_category"
		android:title="@string/kdp_status_bar_battery_category">
		
    <!-- Bettery Bar -->
    <PreferenceScreen
        android:key="battery_bar"
        android:fragment="com.android.settings.kangdroid.KangDroidBatteryBarSettings"
        android:title="@string/battery_bar" />

    <ListPreference
        android:key="status_bar_battery_style"
        android:title="@string/status_bar_battery_style_title"
        android:dialogTitle="@string/status_bar_battery_style_title"
        android:entries="@array/status_bar_battery_style_entries"
        android:entryValues="@array/status_bar_battery_style_values" />

    <ListPreference
        android:key="status_bar_show_battery_percent"
        android:title="@string/status_bar_battery_percentage_title"
        android:dialogTitle="@string/status_bar_battery_percentage_title"
        android:entries="@array/status_bar_battery_percentage_entries"
        android:entryValues="@array/status_bar_battery_percentage_values" />
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_custom_time_header"
		android:title="@string/kdp_custom_time_header_title">

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_custom_header"
            android:title="@string/status_bar_custom_header_title"
            android:summary="@string/status_bar_custom_header_summary"
            android:defaultValue="false"/>
		
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_weather_category"
		android:title="@string/kdp_weather_category_title">

       <ListPreference
           android:key="status_bar_temperature"
           android:title="@string/status_bar_temperature_title"
           android:dialogTitle="@string/status_bar_temperature_title"
           android:entries="@array/status_bar_temperature_entries"
           android:entryValues="@array/status_bar_temperature_values" /> 

       <ListPreference
           android:key="status_bar_temperature_style"
           android:title="@string/status_bar_temperature_location_title"
           android:dialogTitle="@string/status_bar_temperature_location_title"
           android:entries="@array/status_bar_temperature_location_entries"
           android:entryValues="@array/status_bar_temperature_location_values" />
		   
	   </PreferenceCategory>
		   
	<PreferenceCategory
		android:key="kdp_misc_status_bar"
		android:title="@string/kdp_misc_status_bar">
		
    <PreferenceScreen
       android:key="carrierlabel"
       android:title="@string/carrier_options"
	   android:fragment="com.android.settings.rr.CarrierLabel"  />
 
    <PreferenceScreen
           android:key="network_traffic_settings"
           android:title="@string/network_traffic_title"
           android:fragment="com.android.settings.rr.NetworkTrafficSettings" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="show_su_indicator"
        android:title="@string/su_indicator"
        android:summaryOn="@string/su_indicator_summary_on"
        android:summaryOff="@string/su_indicator_summary_off"
        android:defaultValue="true" />

   </PreferenceCategory>
</PreferenceScreen>
