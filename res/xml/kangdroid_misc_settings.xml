<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory
		android:key="kdp_app_bar_settings"
		android:title="@string/kdp_app_bar_settings_title">

    <!-- App sidebar -->
    <PreferenceScreen
         android:key="app_sidebar"
         android:fragment="com.android.settings.rr.AppSidebar"
         android:title="@string/app_sidebar_title" />
			
    <!-- Circle app bar -->
     <PreferenceScreen
         android:key="app_circle_bar"
         android:fragment="com.android.settings.crdroid.AppCircleBar"
         android:title="@string/app_circle_bar_title"/>
		 
	 </PreferenceCategory>
	 
	 <PreferenceCategory
		 android:key="kdp_system_remover"
		 android:key="@string/kdp_system_app_remover_title">
			 
     <!-- System APP Remover -->
     <PreferenceScreen
         android:id="@+id/system_app_remover"
         android:title="@string/system_app_remover"
         android:fragment="com.android.settings.rr.fragments.SystemappRemover" />
		 
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_gesture_category"
		android:title="@string/kdp_gesture_category_title">
	
        <!-- Gesture anywhere -->
        <PreferenceScreen
            android:key="gesture_anywhere"
            android:fragment="com.android.settings.rr.gestureanywhere.GestureAnywhereSettings"
            android:title="@string/gesture_anywhere_title" />
			
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="kdp_advance_weather"
		android:title="@string/kdp_advanced_weather_title">
			
        <!-- Weather Settings -->
       <Preference
           android:id="@+id/weather_settings"
           android:title="@string/weather_settings_title">
           <intent
               android:action="android.intent.action.MAIN"
               android:targetClass="com.cyanogenmod.lockclock.preference.Preferences"
               android:targetPackage="com.cyanogenmod.lockclock" >
               <extra android:name=":android:show_fragment"
                   android:value="com.cyanogenmod.lockclock.preference.WeatherPreferences" />
           </intent>
       </Preference>
	   
   </PreferenceCategory>

</PreferenceScreen>
